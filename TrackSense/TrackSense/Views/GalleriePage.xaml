<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TrackSense.Views.GalleriePage"
             xmlns:viewmodel="clr-namespace:TrackSense.ViewModels"
             Title="{Binding Title}">
    <VerticalStackLayout
        Spacing = "25"
        Padding = "30,0">
        <Label 
            Text="Gallerie"
            FontSize="30"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Button Text="Ouvrir la gallerie"
                Command="{Binding OuvrirGallerieCommand}" />
        <Button Text="Prendre une nouvelle photo"
                Command="{Binding PrendrePhotoCommand}" />
    </VerticalStackLayout>
</ContentPage>